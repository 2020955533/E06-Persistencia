<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_tirar_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_tirar_foto"
        android:textSize="@dimen/dimens_txt_btn"/>

    <ImageView
        android:id="@+id/foto"
        android:layout_width="@dimen/dimens_img_width"
        android:layout_height="@dimen/dimens_img_height"
        android:layout_margin="@dimen/dimens_margin_foto"/>

    <Button
        android:id="@+id/btn_salvar_foto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_salvar_foto"
        android:textSize="@dimen/dimens_txt_btn"/>

</LinearLayout>