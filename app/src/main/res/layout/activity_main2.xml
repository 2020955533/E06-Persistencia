<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity2">

    <EditText
        android:id="@+id/txt_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/sring_hint_produto"
        android:textSize="@dimen/dimens_txt_hint" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_moeda_preco"
            android:textSize="@dimen/dimens_txt_hint" />

        <EditText
            android:id="@+id/txt_preco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/sring_hint_preco"
            android:inputType="numberDecimal"
            android:textSize="@dimen/dimens_txt_hint" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_btn_cadastro_produto"
        android:textSize="@dimen/dimens_txt_btn" />

    <ListView
        android:id="@+id/produtos_lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>